<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item android:width="60dp" android:height="60dp" android:left="5dp" android:top="5dp">
        <shape>
            <solid android:color="@color/red"/>
        </shape>
    </item>

    <item android:width="60dp" android:height="60dp" android:right="5dp" android:gravity="right|bottom" android:bottom="5dp" >
        <shape>
            <solid android:color="@color/lightGreen" />
        </shape>
    </item>
</layer-list>